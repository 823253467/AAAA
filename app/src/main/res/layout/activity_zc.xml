<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.aaaa.MainActivity">
    <TextView
        android:id="@+id/num"
        android:layout_below="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号："
        />
    <EditText
        android:id="@+id/et_phone1"
        android:layout_toRightOf="@+id/num"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"/>
    <TextView
        android:paddingTop="50dp"
        android:id="@+id/pwd"
        android:layout_below="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码："

        />
    <EditText
        android:id="@+id/et_pwd1"
        android:layout_toRightOf="@+id/pwd"
        android:password="true"
        android:layout_below="@+id/et_phone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        />
<LinearLayout
    android:layout_below="@+id/et_pwd1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/bt_yse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        />
    <Button
        android:id="@+id/bt_cannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        />
</LinearLayout>

</RelativeLayout>
