<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent" android:layout_width="match_parent">

    <com.bwei.monizk.Title
        android:id="@+id/title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.bwei.monizk.Title>
    <com.bwei.monizk.Circle
        android:id="@+id/circle_id"
        android:layout_gravity="center"
        android:layout_width="500dp"
        android:layout_height="500dp" />
    <Button
        android:text="扫描"
        android:id="@+id/btn_sm"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="200dp"
        android:id="@+id/text_id"
        android:text="sasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
